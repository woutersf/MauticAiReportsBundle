{% block aireportsconfig_widget %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">AI Report Settings</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.ai_reports_model) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.ai_report_prompt) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.allow_graph_creation) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
